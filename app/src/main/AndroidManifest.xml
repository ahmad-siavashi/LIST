<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ahmadsiavashi.list"
          android:installLocation="auto"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="DATABASE"
            android:value="list.db"/>
        <meta-data
            android:name="VERSION"
            android:value="1"/>
        <meta-data
            android:name="QUERY_LOG"
            android:value="false"/>
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.ahmadsiavashi.list"/>

        <activity
            android:name="com.ahmadsiavashi.list.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.ahmadsiavashi.list.PreferencesActivity"
                  android:label="@string/preferences"
                  android:screenOrientation="portrait"/>
    </application>

</manifest>
