<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">

    <Spinner
        android:id="@+id/spinnerPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <!-- The repetition is because of compatibility with different APIs -->
    <AutoCompleteTextView
        android:id="@+id/txtInputItemTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/spinnerPriority"
        android:layout_toLeftOf="@+id/imgInputInsertItem"
        android:layout_toRightOf="@+id/spinnerPriority"
        android:layout_toStartOf="@+id/imgInputInsertItem"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:capitalize="sentences"
        />

    <ImageView
        android:id="@+id/imgInputInsertItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/add_item_icon"/>

</RelativeLayout>